{
  "manifest_version": 2,
  "name": "Bubble Mirror",
  "description": "Show a bubble mirror.",
  "version": "0.0.1",

  "icons": {
    "16": "assets/icon_16.png",
    "128": "assets/icon_128.png",
    "256": "assets/icon_256.png"
  },

  "permissions": [
    "app.window.alpha",
    "app.window.alwaysOnTop",
    "contextMenus",
    "notifications",
    "videoCapture"
  ],

  "app": {
    "background": {
      "scripts": ["background.js"]
    }
  }
}
